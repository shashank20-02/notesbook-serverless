generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id  String  @id  @default(uuid())
  name String 
  email  String  @unique
  password  String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  notes Note[]
}

model Note{
  id  String  @id  @default(uuid())
  title  String  
  description  String
  authorId String
  createdAt DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  author  User  @relation(fields:[authorId] , references:[id])
}
